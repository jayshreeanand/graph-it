<%= render 'form', story: @story %>

<div class="container">
  <button type="button" class="btn btn-lg btn-outline-purple mt-5 mb-4" data-toggle="modal" data-target="#uploadStoryModal">
    Create Story
  </button>
  <div id="stories">
    <%- @stories.in_groups_of(3, false).each do |stories| %>
      <div class="row">
        <%= render stories %>
      </div>
    <%- end %>
  </div>
</div>