<div class="col-md-3 col-sm-6 story-box">
  <div class="story">
    <div class="thumbnail">
      <img class="picture" src="<%= story.picture.url %>" alt="">
      <div class="caption">
        <h3 class="story-title"><%= link_to story.title, story %></h3>
        <p class="story-description"><%= story.description %></p>
        <p><i class="fe fe-map-pin"></i><%= story.location %>
      </div>
    </div>
  </div>
</div>
