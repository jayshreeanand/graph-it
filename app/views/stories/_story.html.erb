<div class="col-m-4">
  <%= link_to story, action: 'go' do %>
    <div class="story-box">
      <div class="story">
        <div class="thumbnail">
          <%- if story.kind == 'video' %>
            <%= video_tag story.attachment.url, controls: true, class: 'video' %>
          <%- elsif story.kind == 'image' %>
            <img class="picture" src="<%= story.attachment.url %>" alt="">
          <% end %>
          <div class="caption">
            <h3 class="story-title"><%= story.title %></h3>
            <p class="story-description"><%= story.description %></p>
            <p><i class="fe fe-map-pin"></i><%= story.location %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>