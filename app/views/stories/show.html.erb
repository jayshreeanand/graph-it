<div class="col-md-3 col-sm-6 story-box">
  <div class="story">
    <div class="thumbnail">
      <%= console %>
      <%- if @story.kind == 'video' %>
        <%= video_tag @story.attachment.url, controls: true, class: 'video' %>
      <%- elsif @story.kind == 'image' %>
        <img class="picture" src="<%= @story.attachment.url %>" alt="">
      <% end %>
      <div class="caption">
        <h3 class="story-title"><%= @story.title %></h3>
        <p class="story-description"><%= @story.description %></p>
        <p><i class="fe fe-map-pin"></i><%= @story.location %>
      </div>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_story_path(@story) %> |
<%= link_to 'Destroy', @story, method: :delete, confirm: 'Are you sure you want to delete this?' %> |
<%= link_to 'Back', stories_path %>

