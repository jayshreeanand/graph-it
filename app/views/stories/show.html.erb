<div class="container">
  <div class="top-links py-5 row">
    <div class="col-md-1">
      <%= link_to 'Edit', edit_story_path(@story), class: "btn btn-outline-purple btn-lg" %> 
    </div>
    <div class="col-md-3">
      <%= button_to 'Destroy', @story, method: :delete,  class: 'btn btn-outline-purple btn-lg', confirm: 'Are you sure you want to delete this?' %>
    </div>
  </div>


  <div class="col-md-6 col-sm-6 story-box">
    <div class="story">
      <div class="thumbnail">
        <%- if @story.kind == 'video' %>
          <%= video_tag @story.resized_attachment, controls: true, class: 'video' %>
        <%- elsif @story.kind == 'image' %>
          <img class="picture" src="<%= @story.resized_attachment %>" alt="">
        <% end %>
        <div class="caption">
          <h3 class="story-title"><%= @story.title %></h3>
          <p class="story-description"><%= @story.description %></p>
          <p><i class="fe fe-map-pin"></i><%= @story.location %>
          <p class="attachment">Original Asset Link: <a href="<%= @story.attachment.url %>" target="_blank"><%= @story.attachment.url %></a></p>
          <p class="attachment">Resized Asset Link: <a href="<%= @story.attachment.url %>" target="_blank"><%= @story.resized_attachment %></a></p>
        </div>
      </div>
    </div>
  </div>
</div>

