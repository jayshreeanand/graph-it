<div class="container mt-5">
  <div id="stories">
    <%- @stories.in_groups_of(3, false).each do |stories| %>
      <div class="row">
        <%- stories.each do |story| %>
          <div class="col-m-4">
            <%= link_to story, action: 'go' do %>
              <div class="story-box">
                <div class="story">
                   <div class="avatar-tiny">
                    <span><%= image_tag story.user.image, class: "rounded-circle" %>
                    <%= story.user.full_name %></span>
                  </div>
                  <div class="thumbnail">
                    <%- if story.kind == 'video' %>
                      <%= video_tag story.attachment.url, controls: true, class: 'video' %>
                    <%- elsif story.kind == 'image' %>
                      <img class="picture" src="<%= story.attachment.url %>" alt="">
                    <% end %>
                    <div class="caption">
                      <h3 class="story-title"><%= story.title %></h3>
                      <p class="story-description"><%= story.description %></p>
                      <p><i class="fe fe-map-pin"></i><%= story.location %>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <%- end %>
      </div>
    <%- end %>
  </div>
</div>