<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
  <h1 class='h3 mb-3 font-weight-normal'>Log in</h1>
    <%= f.label :email, class: 'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Email Address', class: 'form-control' %>

    <%= f.label :password, class: 'sr-only', for: 'inputPassword' %><br />
    <%= f.password_field :password, id: 'inputPassword', autocomplete: 'current-password', placeholder: 'Password', class: 'form-control' %>

  <% if devise_mapping.rememberable? %>
    <div class='checkbox mb-3'>
      <%= f.label :remember_me do %>
        <%= f.check_box :remember_me %>
        Remember me
      <% end %>
    </div>
  <% end %>

  <div class='actions'>
    <%= f.submit 'Log in', class: 'btn btn-lg btn-primary btn-block' %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>


